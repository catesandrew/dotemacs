${1:var date2str} = function(d) {
  function fnum(n) {
    return n <= 9 ? '0' + n : '' + n
  }
  return d.getFullYear() + '-' +
    fnum(d.getMonth() + 1) + '-' +
    fnum(d.getDate())
}